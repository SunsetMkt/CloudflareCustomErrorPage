<footer>
  <provider data-i18n="provider"><%- i18n.provider %></provider>
  <br />
  <text>
    <!-- Project link (shown for all footer types) -->
    <span data-i18n="footer.projectLink"
      ><%- allI18n['en-US'].footer.projectLink %></span
    >
    <br />

    <!-- Your IP and Ray ID -->
    <div id="footer-details">
      <!-- Your IP with placeholders -->
      <span data-i18n="footer.yourIpPre"
        ><%- allI18n['en-US'].footer.yourIpPre %></span
      ><code id="client-ip" style="display: none">::CLIENT_IP:: (::GEO::)</code
      ><span data-i18n="footer.yourIpPost"
        ><%- allI18n['en-US'].footer.yourIpPost %></span
      ><a
        id="click-to-reveal"
        data-i18n="footer.clickToReveal"
        onclick="revealIP()"
        href="javascript:void(0)"
        ><%- allI18n['en-US'].footer.clickToReveal %></a
      >
      <br />

      <!-- Ray ID with placeholders -->
      <span data-i18n="footer.rayIdPre"
        ><%- allI18n['en-US'].footer.rayIdPre %></span
      ><code>::RAY_ID::</code
      ><span data-i18n="footer.rayIdPost"
        ><%- allI18n['en-US'].footer.rayIdPost %></span
      >
      <br />

      <details>
        <summary>Debug Info</summary>
        ::CLOUDFLARE_ERROR_1000S_BOX:: ::CLOUDFLARE_ERROR_500S_BOX::
      </details>
      <br />
    </div>
  </text>
</footer>
