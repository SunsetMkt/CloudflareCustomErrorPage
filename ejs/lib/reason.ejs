<reason>
  <explain>
    <main data-i18n="explain"><%= i18n.explain %></main>
    <p data-i18n="reasons.<%= config.reasonKey %>.explain">
      <%- allI18n['en-US'].reasons[config.reasonKey].explain %>
    </p>
    <noscript>
      <p>Check the Debug Info for error details in NoScript mode.</p>
    </noscript>
  </explain>
  <howtodo>
    <main data-i18n="howtodo"><%= i18n.howtodo %></main>
    <p data-i18n="reasons.<%= config.reasonKey %>.howtodo">
      <%- allI18n['en-US'].reasons[config.reasonKey].howtodo %>
    </p>
    <% if (config.statusCode === 403) { %>
    <div class="challenge-container">::CAPTCHA_BOX::</div>
    <% } %>
  </howtodo>
</reason>
